@{
    ViewData["Title"] = "Example Website 1 <3";
}

<body>
    <div class="loader_bg modal fade">
        <div class="loader"><img src="images/loading.gif" alt="#" /></div>
    </div>
    <header>
        <nav class="aos-item navbar navbar-expand-lg navbar-dark bg-dark fixed-top" data-aos="fade-right">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Connect Example</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                   
                        <li class="nav-item">
                            <a class="nav-link" href="#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#pricing">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact Us</a>
                        </li>
                       
                    </ul> 
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div id="hero" class="aos-item px-4 py-5 my-5 text-center "  data-aos="fade-left">
        <img class="d-block mx-auto mt-5 mb-5 turn" src="/images/thinkinggraphic.svg" width="40%" height="40%" alt="" >
        <div></div>
        <h1 class="display-5 mb-4 fw-bold">Let Us Take Care Of Your Website!</h1>
        <p class="lead mb-3">Website design, hosting and more. For affordable prices! Our designs and services can bring new life to your business.</p>
        <button class="btn btn-lg btn-primary" type="button">Find Out How!</button>
    </div>

    @*<hr class="solid" />*@

    <div id="about">
        <div class="row flex-lg-row-reverse align-items-center justify-content-center g-5 py-5 mx-5 aos-item" data-aos-anchor-placement="top-center" data-aos="fade-up">
          <div class="col-10 col-sm-8 col-lg-6">
            <img src="~/images/Dream.svg" class="d-block mx-lg-auto img-fluid"  width="700" height="500" loading="lazy">
          </div>
          <div class="col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">A Tech Startup With a Mission </h1>
            <p class="lead">At Connect Dorset, we want to bring as many small businesses online as possible. We believe it is incredibly important for any brand to have a central website to control all their services - and that's what we aim to provide. At Connect Dorset, we want to provide you with the everything you
                need, at a price that is affordable and sustainable. Our hosting services offer 24/7 support, so we'll be there if you need us.</p>
          </div>
        </div>
    </div>

    @*<hr class="solid" />*@

    <div id="pricing" class="mx-5">
        <div class="aos-item" data-aos="fade-up" data-aos-anchor-placement="top-center">

            <div class="px-4 py-5 my-5 mx-5 text-center">
                <h1>Our Pricing</h1>
                <h2>This section will show off our easy to understand pricing structure</h2>
            </div>
            <div class="row g-4 py-5 row-cols-2 row-cols-lg-3 mx-5">

                <div class="col d-flex align-items-start">
                    <div class="icon-square text-bg-light d-inline-flex align-items-center justify-content-center fs-4 flex-shrink-0 me-3">
                        <img height="100px" width="100px" src="~/Images/Icons/Website1.svg">
                    </div>
                    <div>
                        <h3 class="fs-2">Basic Website Design</h3>
                        <p>Simple... To show information and external links</p>
                        <a href="#" class="btn btn-primary">
                            £500
                        </a>
                    </div>
                </div>

                <div class="col d-flex align-items-start">
                    <div class="icon-square text-bg-light d-inline-flex align-items-center justify-content-center fs-4 flex-shrink-0 me-3">
                        <img height="100px" width="150px" src="~/Images/Icons/Website2.svg">
                    </div>
                    <div>
                        <h3 class="fs-2">Website Design With User Accounts</h3>
                         <p>View personal information for each user</p>
                        <a href="#" class="btn btn-primary">
                            £750
                        </a>
                    </div>
                </div>

                <div class="col d-flex align-items-start">
                    <div class="icon-square text-bg-light d-inline-flex align-items-center justify-content-center fs-4 flex-shrink-0 me-3">
                        <img height="100px" width="100px" src="~/Images/Icons/Website3.svg">
                    </div>
                    <div>
                        <h3 class="fs-2">Website Design with Booking System</h3>
                         <p>Coming soon! Manage all your appointments in one place!</p>
                        <a href="#" class="btn btn-primary">
                            £1000
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>


    @*<hr class="solid"/>*@

    <div id="contact" class="mx-5 aos-item mb-5" data-aos="fade-up" data-aos-anchor-placement="top-center">
        <div class="form-group">
            <label class="col-form-label col-form-label-lg mt-4" for="inputLarge">Name</label>
            <input class="form-control form-control-lg" type="text" placeholder=".form-control-lg" id="inputLarge">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleTextarea" class="form-label mt-4">Write your message here...</label>
            <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
        </div>
    </div>

    <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            <li class="nav-item"><a href="#home" class="nav-link px-2 text-muted">Home</a></li>
            <li class="nav-item"><a href="#about" class="nav-link px-2 text-muted">About</a></li>
            <li class="nav-item"><a href="#pricing" class="nav-link px-2 text-muted">Pricing</a></li>
            <li class="nav-item"><a href="#contact" class="nav-link px-2 text-muted">Contact Us</a></li>
        </ul>
        <p class="text-center text-muted">© 2022 Connect Dorset</p>
    </footer>
</body>
