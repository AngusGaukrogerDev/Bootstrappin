@{
    ViewData["Title"] = "Welcome to Example Website 1 <3";
}

<body>
    <div class="loader_bg modal fade">
        <div class="loader"><img src="images/loading.gif" alt="#" /></div>
    </div>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Connect Example</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                   
                        <li class="nav-item">
                            <a class="nav-link" href="#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#Pricing">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Portfolio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact Us</a>
                        </li>
                       
                    </ul> 
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div id="hero" class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mt-5 mb-5" src="/images/thinkinggraphic.svg" width="40%" height="40%" alt="" >
        <div></div>
        <h1 class="display-5 mb-4 fw-bold">Let Us Take Care Of Your Website!</h1>
        <p class="lead mb-3">Website design, hosting and more. For affordable prices! Our designs and services can bring new life to your business.</p>
        <button class="btn btn-lg btn-primary" type="button">Find Out How!</button>
    </div>

    <div class="a-example-divider"></div>

    <div id="about">
        <div  class="row flex-lg-row-reverse align-items-center justify-content-center g-5 py-5 px-4">
          <div class="col-10 col-sm-8 col-lg-6">
            <img src="~/images/Dream.svg" class="d-block mx-lg-auto img-fluid"  width="700" height="500" loading="lazy">
          </div>
          <div class="col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">A Tech Startup With a Mission </h1>
            <p class="lead">At Connect Dorset, we want to bring as many small businesses online as possible. We believe it is incredibly important for any brand to have a central website to control all their services - and that's what we aim to provide. At Connect Dorset, we want to provide you with the everything you
                need, at a price that is affordable and sustainable. Our hosting services offer 24/7 support, so we'll be there if you need us.</p>
          </div>
        </div>
    </div>

    <div class="a-example-divider"></div>

    <div id="Pricing">
        <div>

            <div class="px-4 py-5 my-5 text-center">
                <h1>Our Pricing</h1>
                <h2>This section will show off our easy to understand pricing structure</h2>
            </div>

            <div class="row">
                <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" >
                    <div class="card bg-secondary mb-3" style="max-width: 20rem;">
                        <div class="icon"><img height="100px" width="100px" src="~/Images/Icons/AboutMe.png"></i></div>
                        <h4 class="title">Basic Website Design - £500</h4>
                        <p class="description">Simple... To show information and external links</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" >
                    <div class="card bg-secondary mb-3" style="max-width: 20rem;">
                        <div class="icon"><img height="100px" width="150px" src="~/Images/Icons/Travel.png"></i></div>
                        <h4 class="title">Website Design With User Accounts - £750</h4>
                        <p class="description">View personal information for each user</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0">
                    <div class="card bg-secondary mb-3" style="max-width: 20rem;">
                        <div class="icon"><img height="100px" width="100px" src="~/Images/Icons/Podcast.png"></i></div>
                        <h4 class="title">Website Design with Bookin System - £1000</h4>
                        <p class="description">Coming soon! Manage all your appointments in one place!</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" >
                    <div class="card bg-secondary mb-3" style="max-width: 20rem;">
                        <div class="icon"><img height="100px" width="100px" src="~/Images/Icons/Contact.png"></i></div>

                        <h4 class="title">Website Hosting - £15 Per Month</h4>
                        <p class="description">Get your site online with our secure server</p>
                    </div>
                </div>


            </div>

        </div>
    </div>

    <div class="a-example-divider"></div>

</body>
